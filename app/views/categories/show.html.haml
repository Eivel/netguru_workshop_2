%p#notice= notice
.panel.panel-default
  .panel-heading
    %h4= category.name
  .panel-body
    .row
      .col-md-12.col-sm-12
        %table.table.table-striped
          %thead
            %tr
              %th.col-md-4.col-xs-4 Product
              %th.col-md-4.col-xs-4 Description
              %th.col-md-4.col-xs-4 Price
          %tbody
            - category.products.each do |product|
              %tr
                %td= link_to product.title, products_path
                %td= product.description
                %td= product.price


.panel.panel-default
  .panel-heading
    %h4 New product
  .panel-body
  = render 'products/form'

= link_to 'Edit', edit_category_path(category), class: 'btn btn-default btn-xs'
\|
= link_to 'Back', categories_path, class: 'btn btn-default btn-xs'
